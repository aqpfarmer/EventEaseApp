@inject EventEaseApp.Services.SessionService SessionService
@inherits LayoutComponentBase
<style>
    body {
        font-family: Verdana, Geneva, sans-serif;
        font-size: 14px;
    }
    .navbar-nav .nav-link:hover {
        font-weight: bold;
        transition: font-weight 0.2s;
    }
</style>
<div class="page">
    <main>
        <div style="background-color: Orange; display: flex; flex-direction: column; align-items: center; justify-content: center; padding: 10px 0;">
            <span style="font-weight:bold; font-size:2rem;">Event Ease Application - Sample coding project</span>
            
            <div style="margin-top:10px; font-size:0.9rem; color:#333;">
                Session: @SessionService.SessionId - 
                Last Activity: @SessionService.LastActivity.ToString("g")
            </div>
        </div>

        <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4" style="background-color: #e6e6fa;">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">EventEase</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav w-100 flex-column flex-lg-row">
                        <li class="nav-item">
                            <a class="nav-link" href="/register">Register For Event</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/addevent">Add Event</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/events">Events List</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/help">Help</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <article class="content px-4" style="background-color: blanchedalmond">
            @Body
        </article>
    </main>
</div>
