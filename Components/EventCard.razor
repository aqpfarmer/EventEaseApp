@using EventEaseApp.Models
@namespace EventEaseApp.Components

<div class="card event-card">
    <img src="@Event.ImageUrl" class="card-img-top" alt="@Event.Name" style="max-height:200px;object-fit:cover;">
    <div class="card-body">
        <h5 class="card-title">@Event.Name</h5>
        <h6 class="card-subtitle mb-2 text-muted">@Event.Date.ToString("MMMM dd, yyyy")</h6>
        <p class="card-text">@Event.Description</p>
        <p class="card-text"><small class="text-muted">Location: @Event.Location</small></p>
    </div>
</div>

@code {
    [Parameter]
    public Event Event { get; set; }
}
